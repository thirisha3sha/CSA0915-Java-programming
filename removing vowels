/*Write a program that accepts a string from user and displays the same string
after removing vowels from it.
 */
import java.io.*;
import java.util.*;
public class remove_vowels
{
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the string:");
        String s=sc.nextLine();
        String result=s.replaceAll("[aeiouAEIOU]","");
        System.out.println("after removing vowels:"+result);

    }
}
//output:
enter the string:
i am thirisha
after removing vowels: m thrsh
