import java.io.*;
import java.util.*;
public class lower_upper_digit_count{
    public static void main(String[] args)
    {
        Scanner sc=new Scanner(System.in);
        int upper_count=0,lower_count=0,digit_count=0;
        System.out.println("enter * to exit!!");
        while(true)
        {
            System.out.println("enter any character:");
            char c=sc.next().charAt(0);
            if(c=='*')
            {
                break;
            }
            if(c>=65&&c<=90)
            {
                upper_count++;
            }
            else if(c>=97&&c<=122)
            {
                lower_count++;
            }
            else if(c>=48&&c<=57)
            {
                digit_count++;
            }
        }
        System.out.println("uppercase count:"+upper_count);
        System.out.println("lowercase count:"+lower_count);
        System.out.println("digits count:"+digit_count);
    }
}
//output:
enter * to exit!!
enter any character:
